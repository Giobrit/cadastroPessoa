CREATE TABLE pessoas_caracteristicas (idPessoa BIGINT NOT NULL, id BIGINT NOT NULL, PRIMARY KEY (idPessoa, id))
ALTER TABLE pessoa ADD CONSTRAINT FK_pessoa_PAI FOREIGN KEY (PAI) REFERENCES pessoa (ID)
